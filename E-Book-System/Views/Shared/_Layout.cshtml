<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Book_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/images//HomeImages/favicon.png">

    <!-- all css here -->
    <!-- bootstrap v3.3.6 css -->
    <!-- animate css -->
    <link rel="stylesheet" href="~/css/HomeCSS/animate.css">
    <!-- meanmenu css -->
    <link rel="stylesheet" href="~/css/HomeCSS/meanmenu.min.css">
    <!-- owl.carousel css -->
    <link rel="stylesheet" href="~/css/HomeCSS/owl.carousel.css">
    <!-- font-awesome css -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <!-- flexslider.css-->
    <link rel="stylesheet" href="~/css/HomeCSS/flexslider.css">
    <!-- chosen.min.css-->
    <link rel="stylesheet" href="~/css/HomeCSS/chosen.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/css/HomeCSS/style.css">
    <!-- responsive css -->
    <link rel="stylesheet" href="~/css/HomeCSS/responsive.css">
    <!-- modernizr css -->
    <script src="~/js/HomeJS/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <header>
        <!-- header-top-area-start -->
        <div class="header-top-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 ">

                    </div>
                    @*login*@
                    <div class="col-lg-6 col-md-6">
                        <div class="account-area text-right nav-item">
                            <partial name="_LoginPartial.cshtml" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header-top-area-end -->
        <!-- header-mid-area-start -->
        <div class="header-mid-area ptb-40">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-5 col-12">
                        <div class="header-search">
                            <form action="#">
                                <input type="text" placeholder="Search entire store here..." />
                                <a href="#"><i class="fa fa-search"></i></a>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-4 col-12">
                        <div class="logo-area text-center logo-xs-mrg">
                            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo mini.png" alt="logo" height="100px" width="100px" /></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-12">
                        <div class="my-cart">
                            <ul>
                                <li>
                                    <a asp-area="" asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart"></i>My Cart</a>
                                    @*<span>2</span>*@

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header-mid-area-end -->
        <!-- main-menu-area-start -->
        <div class="main-menu-area d-md-none d-none d-lg-block sticky-header-1" id="header-sticky">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="menu-area">
                            <nav>
                                <ul>
                                    <li class="">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">Home<i class=""></i></a>

                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Home" asp-action="ShopView">Shop</a>

                                    </li>

                                    <li>
                                        <a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>

                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Home" asp-action="Blog">blog</a>

                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Home" asp-action="ContactUs">Contact US</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- main-menu-area-end -->
        <!-- mobile-menu-area-start -->
        <div class="mobile-menu-area d-lg-none d-block fix">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mobile-menu">
                            <nav id="mobile-menu-active">
                                <ul id="nav">
                                    <li class="">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Home" asp-action="ShopView">Shop</a>

                                    </li>

                                    <li>
                                        <a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>

                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Home" asp-action="Blog">blog</a>

                                    </li>
                                    <li>
                                        <a asp-area="" asp-controller="Home" asp-action="ContactUs">Contact US</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- mobile-menu-area-end -->

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <!-- footer-top-start -->
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer-top-menu bb-2">
                            <nav>
                                <ul>
                                    <li><a href="#">home</a></li>
                                    <li><a href="#">Enable Cookies</a></li>
                                    <li><a href="#">Privacy and Cookie Policy</a></li>
                                    <li><a href="#">contact us</a></li>
                                    <li><a href="#">blog</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- footer-top-start -->
        <!-- footer-mid-start -->
        <div class="footer-mid ptb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-12">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-12">
                                <div class="single-footer br-2 xs-mb">
                                    <div class="footer-title mb-20">
                                        <h3>Products</h3>
                                    </div>
                                    <div class="footer-mid-menu">
                                        <ul>
                                            <li><a href="about.html">About us</a></li>
                                            <li><a href="#">Prices drop </a></li>
                                            <li><a href="#">New products</a></li>
                                            <li><a href="#">Best sales</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            
                          
                        </div>
                    </div>
                    <div class="col-lg-4 col-12">
                        <div class="single-footer mrg-sm">
                            <div class="footer-title mb-20">
                                <h3>STORE INFORMATION</h3>
                            </div>
                            <div class="footer-contact">
                                <p class="adress">
                                    <span>E-Book (PVT)Ltd</span>
                                    Galle,Sri Lanka
                                </p>
                                <p><span>Call us now:</span> 0123456789</p>
                                <p><span>Email:</span> ebook@gmail.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- footer-mid-end -->
        <!-- footer-bottom-start -->
        <div class="footer-bottom">
            <div class="container">
                <div class="row bt-2">
                    <div class="col-lg-6 col-md-6 col-12">
                        <div class="copy-right-area">
                            <p>&copy; 2022 <strong> E-Book (PVT)Ltd </strong></p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-12">
                        <div class="payment-img text-right">
                            <a href="#"><img src="img/1.png" alt="payment" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- footer-bottom-end -->
    </footer>

    <!-- all js here -->
    <!-- jquery latest version -->
    <script src="~/js/HomeJS/vendor/jquery-1.12.4.min.js"></script>
    <!-- popper js -->
    <script src="~/js/HomeJS/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/js/HomeJS/bootstrap.min.js"></script>
    <!-- owl.carousel js -->
    <script src="~/js/HomeJS/owl.carousel.min.js"></script>
    <!-- meanmenu js -->
    <script src="~/js/HomeJS/jquery.meanmenu.js"></script>
    <!-- wow js -->
    <script src="~/js/HomeJS/wow.min.js"></script>
    <!-- jquery.parallax-1.1.3.js -->
    <script src="~/js/HomeJS/jquery.parallax-1.1.3.js"></script>
    <!-- jquery.countdown.min.js -->
    <script src="~/js/HomeJS/jquery.countdown.min.js"></script>
    <!-- jquery.flexslider.js -->
    <script src="~/js/HomeJS/jquery.flexslider.js"></script>
    <!-- chosen.jquery.min.js -->
    <script src="~/js/HomeJS/chosen.jquery.min.js"></script>
    <!-- jquery.counterup.min.js -->
    <script src="~/js/HomeJS/jquery.counterup.min.js"></script>
    <!-- waypoints.min.js -->
    <script src="~/js/HomeJS/waypoints.min.js"></script>
    <!-- plugins js -->
    <script src="~/js/HomeJS/plugins.js"></script>
    <!-- main js -->
    <script src="~/js/HomeJS/main.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
